<h1 align="center">this is the login form </h1>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
    <div class="form-group">
      <div class="col-sm-2 control-label"
      <%= f.label :email %>
           </div>
      <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "enter email", autofocus: "true" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label"
      <%= f.label :password %>
           </div>
          <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "log in", class: "btn, btn-primary, btn-lg" %>
           </div>
      </div>
    <%end%>
    <div class="col-xs-4 col-xs-offset-4">
   [ <%= link_to "cancel request and return back to articles listing", articles_path %> ]
  </div>