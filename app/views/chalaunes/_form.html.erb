<%= render 'shared/errors', obj: @chalaune %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@chalaune, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="col-sm-2 control-label"
      <%= f.label :username %>
           </div>
      <div class="col-sm-8">
      <%= f.text_field :username, class: "form-control", placeholder: "enter username", autofocus: "true" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label"
      <%= f.label :email %>
           </div>
          <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label"
      <%= f.label :password %>
           </div>
          <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", placeholder: "enter password" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit(@chalaune.new_record? ? "sign up" : "update account", class: "btn, btn-primary, btn-lg" )%>
           </div>
      </div>
    <%end%>
    <div class="col-xs-4 col-xs-offset-4">
   [ <%= link_to "cancel request and return back to articles listing", articles_path %> ]
  </div>
  </div>
</div>