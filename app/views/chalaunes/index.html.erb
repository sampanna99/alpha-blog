<h1 align="center">all alpha bloggers </h1>
<div align="center">
   <%= will_paginate %>
<% @chalaunes.each do |chalaune| %>
<ul class="listing">
  <div class="row">
    <div class="well col-md-4 col-md-offset-4">
      <li><%= link_to gravatar_for(chalaune), chalaune_path(chalaune) %></li>
      <li class="article-title">
        <%= link_to chalaune.username, chalaune_path(chalaune) %>
        </li>
      <li><small><%= pluralize(chalaune.articles.count, "article") if chalaune.articles %> </small></li>
      <% if logged_in? and current_chalaune.admin? %>
      <li><%= link_to "delete this chalaune", chalaune_path(chalaune), method: :delete, data: {confirm: "are you sure"}%> </li>
      <% end %>
      </div>
    </div>
  </ul>
<% end %>
   <%= will_paginate %>
</div>